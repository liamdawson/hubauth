%define debug_package %{nil}
%define pkg_name hubauth
%define pkg_version @VERSION@
%define pkg_release 1

Name: hubauth
Version: %{pkg_version}
Release: %{pkg_release}%{?dist}
Summary: Use remote public keys for OpenSSH authorized_keys_command
Source0: %{pkg_name}-%{pkg_version}.tar.gz
License: MIT
Group: Applications/Network
BuildRoot: %{_tmppath}/%{pkg_name}-%{pkg_version}-%{pkg_release}-buildroot
Url: github.com/liamdawson/hubauth

%description
Use remote public keys for OpenSSH authorized_keys_command

# BuildRequires: rust

%prep
%setup -n %{pkg_name}-%{pkg_version}

%build
autoconf && %configure
make

%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT PREFIX=/usr

%post

%preun

%clean
rm -rf "$RPM_BUILD_ROOT"

%files
%attr(0755, root, root) %{_bindir}/hubauth

%changelog
* Sat Mar 30 2019 <liam@ldaws.com>
- Initial build
